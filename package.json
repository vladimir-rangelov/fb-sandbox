{
  "name": "@fb-sandbox/clients",
  "version": "0.5.0-next.2",
  "description": "Firebolt Sandbox",
  "type": "module",
  "workspaces": [
    "src/sdks/core"
  ],
  "scripts": {
    "fs:setup": "npm run clean && mkdir -p dist",
    "validate:each": "npx firebolt-openrpc validate --input src/openrpc --platformApi ./dist/firebolt-open-rpc.json --appApi ./dist/firebolt-app-open-rpc.json --schemas src/schemas --transformations",
    "validate:compiled": "npx firebolt-openrpc validate --input dist/firebolt-open-rpc.json --pass-throughs && npm run validate --workspaces",
    "validate": "npm run validate:each && npm run validate:compiled ",
    "compile": "npx firebolt-openrpc openrpc --input src --template src/template/openrpc/template.json --platformApi ./dist/firebolt-open-rpc.json --appApi ./dist/firebolt-app-open-rpc.json --schemas src/schemas",
    "slice": "npm run slice --workspaces && npm run slice:app --workspaces",
    "sdks": "npm run sdk --workspaces",
    "docs": "npm run docs --workspaces",
    "wiki": "npm run wiki --workspaces",
    "test:setup": "npm run test:setup --workspaces",
    "test": "npm run test --workspaces",
    "test:component": "npm run test:component --workspaces",
    "clean": "rm -rf dist && npm run clean --workspaces",
    "dist": "npm run fs:setup && npm run validate:each && npm run compile && npm run dist:notest --workspaces && npm run test",
    "dev:setup": "husky install",
    "publish:docs": "node ./src/js/github.io/index.mjs --output",
    "release-notes": "npx semantic-release --dry-run --repository-url git@github.com:vladimir-rangelov/fb-sandbox.git --plugins @semantic-release/commit-analyzer,@semantic-release/release-notes-generator",
    "prepack": "npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "ssh://github.com/vladimir-rangelov/fb-sandbox.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/vladimir-rangelov/fb-sandbox/issues"
  },
  "homepage": "https://github.com/vladimir-rangelov/fb-sandbox#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@fb-sandbox/openrpc": "git+https://github.com/rdkcentral/firebolt-openrpc.git#next-bidirectional",
    "@fb-sandbox/schemas": "2.0.0",
    "@saithodev/semantic-release-backmerge": "^3.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "ajv": "^6.12.6",
    "form-data": ">=4.0.4",
    "glob": "^13.0.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "js-yaml": ">=4.1.1",
    "mkdirp": "^2.1.6",
    "node-fetch": "^3.3.2",
    "nopt": "^7.1.0",
    "typescript": "^4.6.4"
  },
  "keywords": [
    "firebolt",
    "apps",
    "sdk"
  ],
  "license": "Apache-2.0"
}
